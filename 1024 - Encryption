#include<iostream>
#include<string>
#include<algorithm>
using namespace std;
string encrypt(string s) {
    int len = s.length();
    for (int i = 0; i < len; i++) {
        if (isalpha(s[i])) {
            s[i] = s[i] + 3;
        }
    }
    reverse(s.begin(), s.end());
    for (int i = len / 2; i < len; i++) {
        s[i] = s[i] - 1;
    }
    return s;
}
int main() {
    int N;
    cin >> N; 
    cin.ignore(); 
 
    while (N--) {
        string line;
        getline(cin, line);
        string encryptedLine = encrypt(line);
        cout << encryptedLine << endl;
    }

    return 0;
}
